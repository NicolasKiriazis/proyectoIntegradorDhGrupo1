<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>

            <main class="fondo-users">
                <div class="user-frame">

                    <% users.map(user=>{ %>
                        <article class="user-box">
                            <div class="card" style="width: 16rem;">
                                <img src="<%= user.image %>" class="card-img-top" alt="..." width="200" height="200">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= user.name %>
                                            <%= " " + user.lastname %>
                                    </h5>
                                    <p class="card-text">
                                        <%= "Numero de usuario:" + " " + user.id %>
                                    </p>
                                    <form action="../users/profile/<%= user.id %>" method="GET" style="display: inline-flex">
                                        <button type="submit" class="action-button delete"> Perfil </button>
                                    </form>
                                </div>
                            </div>
                        </article>
                        <% }) %>
                </div>

            </main>

            <%- include('../partials/footer.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
                    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
                    integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
                    crossorigin="anonymous"></script>
    </body>

</html>