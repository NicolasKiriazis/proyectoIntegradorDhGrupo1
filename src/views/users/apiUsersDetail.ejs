<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>

            <main class="fondo-user">

                <div class="card mb-3" style="max-width: 800px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/image/users/<%= user.image%>" class="img-fluid rounded-start" alt="<%= user.name %>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Nombre: <%= user.name %></h5>
                                <h5 class="card-title">Apellido: <%= user.lastname %></h5>
                                <p class="card-text">Email: <%= user.email %></p>
                                <p class="card-text">Direcci√≥n: <%= user.direction %></p>
                                <p class="card-text">Genero: <%= user.gender %></p>
                                <p class="card-text"><small class="text-muted">Numero de usuario: <%= user.id_users %></small></p>
                            </div>
                        </div>
                    </div>
                </div>

            </main>

            <%- include('../partials/footer.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
                    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
                    integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
                    crossorigin="anonymous"></script>
    </body>

</html>