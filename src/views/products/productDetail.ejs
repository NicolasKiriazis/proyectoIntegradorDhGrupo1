<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>

        <%- include('../partials/header.ejs') %>

            <main>
                <div id="category-container">
                    <!-- <a href="/">Juegos,</a>
            <a href="/">Playstation</a> -->
                </div>

                <div id="product-container">

                    <p id="title">
                        <%= product.name %>
                    </p>
                    <div id="img-container">

                        <img src="/image/product-detail-img/<%= product.image %> " alt="<%= " imagen de:" + " " +
                            product.name %> " class="product-img">

                        
                    </div>

                    <div id="product-card">
                        <div id="off-container">
                            <p class="price">
                                <%= "$USD" + " " + product.price + "    " %>
                            </p>
                            <p>
                                <%= product.discount + "%" %> OFF
                            </p>
                        </div>

                        <p class="description">
                            <%= product.description %>
                        </p>
                       
                        <p class="card-text"><small class="text-muted">Numero de producto: <%= product.id %>
                            </small></p>

                        <div id="button-container">

                            <form action="/productcart" method="GET" style="display: inline-flex">
                                <button type="submit" class="action-button delete">Comprar</button>
                            </form>

                           
                            </form>
                            </form>
                        </div>

                    </div>

                </div>

            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>